<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="13dp"
    android:background="#feffe2">

    <TextView
        android:id="@+id/info_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:padding="10dp"
        android:textColor="@color/color_black"
        android:background="@color/color_enable"
        android:textSize="17dp"
        android:text="결제하실 예매정보를 확인해주세요"
        android:textAlignment="center" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/info_textview"
        android:layout_marginTop="30dp"
        android:text="영화제목"
        android:textColor="@color/color_black"
        android:textSize="17dp"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/selected_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="영화제목"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/selected_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/selected_time_textview"
        android:layout_toStartOf="@+id/selected_time_textview"
        android:text="상영일시"
        android:textColor="@color/color_black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/selected_time_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/selected_time"
        android:layout_alignBottom="@+id/selected_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="상영시간"
        android:textSize="17dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selected_time"
        android:layout_marginTop="24dp"
        android:text="인원수"
        android:textColor="@color/color_black"
        android:textSize="17dp"
        android:id="@+id/textView4" />

    <TextView
        android:id="@+id/selected_count_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="인원수"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="64dp"
        android:text="가격"
        android:textColor="@color/color_black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/selected_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:text="가격"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/color_selected"
        android:textSize="17dp" />

    <Button
        android:id="@+id/request_pay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="48dp"
        android:textAlignment="center"
        android:text="카카오페이로 결제하기"
        android:padding="18dp"/>


</RelativeLayout>
